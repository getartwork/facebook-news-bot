{
  "defaultStacks": ["content-api-facebook-news-bot"],
  "packages": {
    "facebook-news-bot": {
      "type": "autoscaling",
      "data": {
        "bucket": "content-api-dist"
      }
    },
    "facebook-news-bot-ami-update" : {
      "type": "ami-cloudformation-parameter",
      "data": {
        "amiTags" : { "Recipe": "ubuntu-wily-java8", "AmigoStage" : "PROD" },
        "amiParameter" : "AMI",
        "cloudFormationStackName": "facebook-news-bot",
        "prependStackToCloudFormationStackName" : false,
        "appendStageToCloudFormationStackName" : true
      }
    }
  },
  "recipes": {
    "default": {
      "depends": [ "artifactUploadOnly", "deployOnly" ]
    },
    "artifactUploadOnly": {
      "actions": [ "facebook-news-bot.uploadArtifacts" ]
    },
    "deployOnly": {
      "actions": [ "facebook-news-bot.deploy" ]
    },
    "ami-cloudformation-parameter" : {
      "actions": [ "facebook-news-bot-ami-update.update" ]
    }
  }
}